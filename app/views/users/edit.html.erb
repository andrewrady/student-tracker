<div class="row">
  <h1>Add new User</h1>
  <%= form_for @user, url: users_admin_path(@user) do |f| %>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Edit User", :class => 'button radius' %>
    </div>
    <% end %>
</div>
